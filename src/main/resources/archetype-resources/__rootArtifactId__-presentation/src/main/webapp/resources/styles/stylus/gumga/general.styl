
body
  font-family fonts
  height 100%
  background-color #FCFCFC

.gumga-container
  padding-left 0.5em
  margin-left menuWidth
  padding-right 0.5em
  padding-top: navbarHeight + 10px
  width 100% - 15%
  overflow auto

.table
  border 1px solid #bdc3c7

.success
  border 1px solid successColor
  &:focus
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px successColor
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px successColor

.error
  border 1px solid errorColor
  &:focus
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px errorColor
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px errorColor


.clickable-td
  text-decoration underline
  color #038dc5
  &:hover
    cursor pointer
    background-color rgba(157, 222, 250, 0.1)

.list-group-z
    @extend .list-group
    z-index 99999

.list-group-item
  position relative
  display block
  padding 10px 15px
  margin-bottom -1px
  background-color #fff
  border 1px solid #ddd
  &:first-child
    border-top-left-radius 4px
    border-top-right-radius 4px
  &:last-child
    margin-bottom 0
    border-bottom-right-radius 4px
    border-bottom-left-radius 4px
  &:hover
    cursor pointer
    background-color rgba(38, 91, 106, 0.2)



.loading
  background url('../../images/ring.svg')
  background-size 75px 75px
  position absolute
  z-index 999999
  height 75px
  width 75px
  bottom 50%
  right 50%
  display none
  
.loading.active
  display block

.responsive-img
  display block
  width 100%
  height 100%
  
.my-button
  @extend .btn
  line-height 1.45
  border-radius 0
  margin-left -3

.my-button.last
  -webkit-border-top-right-radius: 5px;
  -webkit-border-bottom-right-radius: 5px;
  -moz-border-radius-topright: 5px;
  -moz-border-radius-bottomright: 5px;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;


div.gumga-adv-label
  @extend .label
  display inline-block
  font-weight 400
  font-size 0.9em
  cursor pointer
  &:hover
    background-color

.form-control
  &:focus
    border-color #ccc
    box-shadow 0

.correct-form-group
    @extend .form-group
    display flex


.bord.pull-left
  border-right 2px solid #ccc
  margin-right: 1%

input#textEnter
  border 0
  outline 0

.list-holder
  position relative
  display inline
  > .list-selectable
    @extend .dropdown-menu
    display inline-block
    position absolute
    margin-top -0.2%
    box-shadow 0

div.panel.panel-default
  > hr
    margin-top 0

.hover-list
  color #008EE0
  > a
    color inherit
  &:hover
    background-color rgba(204, 204, 204, 0.3)


.full-width-without-margin
  @extend .col-md-12
  margin-right 0
  margin-left 0

.full-width-without-padding
  @extend .col-md-12
  padding-right 0
  padding-left 0

full-width-without-padding-small

.responsive-button-primary
  @extend .btn
  @extend .btn-primary

.responsive-button-danger
  @extend .btn
  @extend .btn-danger

.panel-advanced
  @extend .panel
  @extend .panel-default
  position absolute
  width 100%
  z-index 9999

@media screen and (max-width: 600px)
  .gumga-container
    width 100%
    margin-left 0
  .search-style
    z-index 10

@media screen and (max-width 740px)
  .gumga-container
    width 100%
    padding-left 0
    padding-right 0
    margin-left 0

  .responsive-button-primary
    display block

  .responsive-button-danger
    margin-top 1.5%
    margin-bottom 1.5%
    display block



