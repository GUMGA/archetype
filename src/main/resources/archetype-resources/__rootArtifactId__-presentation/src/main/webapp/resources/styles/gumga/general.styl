body
  font-family fonts
  height 100%

.gumga-container
  padding-left 0.5em
  margin-left menuWidth
  padding-right 0.5em
  padding-top: navbarHeight + 10px
  width 100% - 15%

.table
  border 1px solid #bdc3c7

.success
  border 1px solid successColor
  &:focus
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px successColor
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px successColor

.error
  border 1px solid errorColor
  &:focus
    -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px errorColor
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px errorColor


.clickable-td
  text-decoration underline
  color #038dc5
  &:hover
    cursor pointer
    background-color rgba(157, 222, 250, 0.1)



.list-group-item
  position relative
  display block
  padding 10px 15px
  margin-bottom -1px
  background-color #fff
  border 1px solid #ddd
  &:first-child
    border-top-left-radius 4px
    border-top-right-radius 4px
  &:last-child
    margin-bottom 0
    border-bottom-right-radius 4px
    border-bottom-left-radius 4px
  &:hover
    cursor pointer
    background-color rgba(38, 91, 106, 0.2)

@media screen and (max-width: 600px)
  .gumga-container
    width 100%
    margin-left 0