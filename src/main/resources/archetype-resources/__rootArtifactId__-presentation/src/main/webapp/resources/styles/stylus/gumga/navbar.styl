
#navbar
  height navbarHeight
  width 85%
  border-bottom 1px solid black
  margin-left menuWidth
  position fixed
  padding-left 1em
  line-height navbarHeight
  z-index 100
  background-color navbarBackgroundColor


#navbar .navbar-logo
  text-decoration none
  color navbarLogoColor
  font-weight 800
  font-size 1.3em

.navbar-links
  text-decoration none
  margin-left 2em
  font-size 0.9em

.navbar-input
  float right
  width 20em
  height 30px
  margin-right 1em
  margin-top 8px
  padding-left 1em
  borderRadius(5px)
  font-size 0.9em
  line-height 30px

.status-navbar
  float right
  margin-right 1em
  text-decoration none
  color black


@media screen and (max-width: 1000px)
  .navbar-input
  #navbar .btn-default
    display none

  @media screen and (max-width: 600px)
    .navbar-links
      display none

    #navbar
      width 100%
      margin-left 0%

    .navbar-logo
      margin-left 30px
