.gumga-filter
  display inline-block

.gumga-filter .gumga-filter-item
  display inline-block
  margin-right 5px
  margin-bottom 5px
  position relative

.gumga-filter .gumga-filter-item .btn.btn-logical
  border-radius(4px 0 0 4px)

.gumga-filter .gumga-filter-item .btn.btn-config
  border-radius(0)
  margin-left -1px
  max-width 320px
  text-overflow ellipsis
  overflow hidden

.gumga-filter .gumga-filter-itemfirst-child .btn.btn-config
  border-radius(4px 0 0 4px)

.gumga-filter .gumga-filter-item .btn.btn-remove
  border-radius(4px 0 0 4px)
  margin-left -1px


.gumga-filter .gumga-filter-item .gumga-filter-config
  display inline-block

.gumga-filter .btn-group.selected-item
  margin 2px

.gumga-filter .gumga-filter-panel
  position absolute
  min-width 310px
  background-color #FFF
  padding 10px
  border 1px solid #CCC
  border-radius 4px
  z-index 99

.gumga-filter-selection
  max-width 450px

.gumga-filter-selection .gumga-filter-selection-option
  display inline-block

.gumga-filter-selection.columns-1 .gumga-filter-selection-option
  width 100%

.gumga-filter-selection.columns-2 .gumga-filter-selection-option
  width 50%

.gumga-filter-selection.columns-3 .gumga-filter-selection-option
  width 33%

.gumga-filter-selection.columns-4 .gumga-filter-selection-option
  width 25%

.gumga-filter-selection .gumga-filter-selection-option .checkbox,
.gumga-filter-selection .gumga-filter-selection-option .radio
  margin 0

.twitter-typeahead .tt-query,
.twitter-typeahead .tt-hint
  margin-bottom 0

.tt-dropdown-menu
  position absolute
  top 100%
  left 0
  z-index 1000
  display none
  float left
  min-width 160px
  padding 5px 0
  margin 2px 0 0
  list-style none
  font-size 14px
  background-color #fff
  border 1px solid #ccc
  border 1px solid rgba(0, 0, 0, .15)
  border-radius 4px
  borderRadius(4px)
  boxShadow(0 6px 12px rgba(0, 0, 0, .175))
  background-clip padding-box
  width 100%

.tt-suggestion
  display list-item
  padding 3px 20px

.tt-suggestion.tt-cursor
  color #fff
  background-color #0081c2

.tt-suggestion.tt-cursor a
  color #fff

.tt-suggestion p
  margin 0

.effect.shake
  animation(shake, 150ms, 2, linear)


